<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightThemeSelector" parent="@*android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@*android:color/white</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>
    <style name="MyProgressStyle" parent="@*android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress</item>
    </style>
    <style name="DialogBoxStyle" parent="@*android:style/Theme.Holo.Light" />
    <style name="BrowseButtonStyle">
        <item name="android:textAppearance">@*android:style/TextAppearance.Small</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
    <style name="NoBorderButton">
        <item name="android:background">?android:selectableItemBackground</item>
    </style>
    <style name="browseStyle">
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
    </style>
    <style name="ActionBar" parent="@*android:style/Widget.Holo.ActionBar">
        <item name="android:displayOptions">homeAsUp|showTitle</item>
    </style>
</resources>
